<?xml version="1.0" encoding="utf-8"?>
<com.inferno43.findme.view.ArcLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarOne"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:arc_cropCurve="cropConvex"
    app:arc_height="48dp"
    android:clickable="false"
    app:arc_position="bottom"
    android:layout_gravity="top">
    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="false"
        android:layout_height="match_parent"
        android:background="@color/blue_dark"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/text_dimen"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="@dimen/text_title"
            android:layout_margin="@dimen/default_margin"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/icon_dimen"
            android:minHeight="@dimen/icon_dimen"
            android:layout_margin="@dimen/default_margin"

            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/icon_dimen"
            android:minHeight="@dimen/icon_dimen"
            android:background="@drawable/ic_menu_home"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_alignTop="@+id/title"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</com.inferno43.findme.view.ArcLayout>
